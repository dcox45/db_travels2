<br>
<h2 class = "">Edit Location:
      <p><%= @location.caption.titleize %> </p>
</h2>


<div class="container">

  <form class="form-custom" action="/<%= @region.name %>/update_location/<%= @location.id %>" >
    <div class="form-group">
      <label for="name" class = "form-labels form-cells">Caption</label>
      <input type="text" class = "form-control form-cells" id="caption" name="caption" value = "<%= @location.caption.titleize %>">
    </div>

    <div class="form-group">
      <label for="region_name" class = "form-labels form-cells">Region: </label>
      <select name ="region_name" class = "form-control form-cells" id = "region_name">
        <option selected><%= @region.name.to_s.titleize %></option>
          <% @regions.drop(1).each do |r| %>
            <option type = "text" id ="region_name" value="<%= r.name.to_s %>"><%= r.name.capitalize %> </option>
          <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="image_url" class = "form-labels form-cells">Image URL</label>
      <input type="text" class = "form-control form-cells" id = "image_url" name="image_url" value = "<%= @location.image_url %>" >
    </div>

    <div class="form-group">
      <label for="date" class = "form-labels">Date Visited</label>
      <input type="date" class = "form-control form-cells" id = "date" name="date" value = "<%= @location.date %>">
    </div>

    <div class="form-group">
      <label for="nearest_area" class = "form-labels">Nearest Area (Neighborhood, Town, City):</label>
      <input type="text" class = "form-control form-cells" id = "nearest_area" name="nearest_area" value = "<%= @location.nearest_area%>" >
    </div> <br>

    <input type="submit" class = "btn btn-success btn-lg btn-add ">

  </form>
</div>
