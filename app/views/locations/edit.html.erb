<br>
<h1 class = "industrial">Edit Location:
      <p><%= @location.caption.titleize %> </p>
</h1>
<br>
<br>
<form class="" action="/<%=@region.name%>/update_location/<%=@location.id%>">
  <label for="caption">Caption</label>
  <input type="text" id="caption" name="caption" value="<%= @location.caption%>">
  <label for="region_id">Region</label>
  <input type="text" id="region_id" name="region_id" value="<%= @location.region_id%>">
  <label for="image_url">Image URL</label>
  <input type="text" id = "image_url" name="image_url" value="<%= @location.image_url%>">
  <label for="date">Date Visited</label>
  <input type="date" id = "date" name="date" value="<%= @location.date%>">
  <label for="nearest_area">Nearest Area (Neighborhood, Town, City)</label>
  <input type="text" id = "nearest_area" name="nearest_area" value="<%= @location.nearest_area%>">
  <input type="submit">
</form>
