<%end%> -->


<a href="/" class = "btn btn-primary">Back to Home</a>
<br>
<br>
<div class="container-fluid">
  <table>
    <% @locations.in_groups_of(2, false) do |location| %>
      <tr>
        <% for l in location %>
          <td>
            <a href="/regions/<%=@region.name%>/<%=l.id%>">
            <h4 class="media-heading">   <%=l.caption %>       </h4>
            <img class="media-object" src="<%=l.image_url%>" alt="..." width = 400 height = 270>
            </a>
            <p><b>Date Visited:</b>   <%= l.date %> &nbsp; | &nbsp; <b>Near:</b> <%= l.nearest_area %></p>
            <a href="/regions/<%=@region.name%>/<%=l.id%>" class = "btn btn-primary">View</a>
            <a href="/<%=@region.name%>/<%=l.id%>/edit" class = "btn btn-warning">Edit</a>
            <a href="/<%=@region.name%>/destroy_warning/<%=l.id%>" class = "btn btn-danger">Destroy</a>
          </td>
        <%end%>
      </tr>
    <%end%>
  </table>

</div>
<br>
<br>
  <a href="/<%= @region.name %>/new_location" class = "btn btn-success btn-lg">+ Add a Location Visited in <%= @region.name.capitalize %> </a>
